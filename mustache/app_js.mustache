// --------------- Entry point...
// ...after we load-in and render our mustache templates

function app_setup() {

  // Create a resize choker to ease resize events
  var resize = new ResizeChoker(300);
  resize.init();
  resize.add(function(){console.log('resized called: ' + this.counter;)});

  // TOC
  attach_toc_listeners();

  // Code Samples
  var cs = new CodeSamples();
  init_code_samples(cs);
  resize.add(function(){ cs.inject(); });

  init_code_bar(cs);

  // Highlight.js (code syntax highlighting)
  hljs.configure({
    classPrefix: ''
  });
  $('pre>code').each(function(i, block) {
    hljs.highlightBlock(block);
  });

  // Call the resize event to start things off
  resize.emit();
}
